@using MvcPaging
@model StoreManagement.Data.RequestModel.PhotosViewModel
@{
    ViewBag.Title = "Index";
    var files = Model.SFileManagers;
}

<h2>Index</h2>


<div class="row">
    <div class="col-md-12">
        @if (files.Any())
        {
            foreach (var file in files)
                {
                    <div class="col-md-12">
                        @Html.DisplayFor(model => file)
                    </div>
                }
  <div class="pager">

            @Html.Pager(files.PageSize, 
            files.PageNumber, 
            files.TotalItemCount).Options(o => o.DisplayTemplate("BootstrapPagination").MaxNrOfPages(3).DisplayFirstAndLastPage().AlwaysAddFirstPageNumber()
                                                                                                                            .SetPreviousPageText("←")
                                                                                                                            .SetNextPageText("→"))

        </div>
            
        }
    </div>
</div>
